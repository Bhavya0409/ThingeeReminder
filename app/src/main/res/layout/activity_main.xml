<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="20dp">

    <Button
        android:id="@+id/reminder_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toggle_reminder"/>

    <TextView
        android:id="@+id/reminder_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reminder"
        android:textSize="18sp"
        android:layout_below="@id/reminder_button"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/reminder_toggle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status"
        android:layout_below="@id/reminder_button"
        android:layout_toRightOf="@id/reminder_text"
        android:textSize="18sp"
        android:layout_toEndOf="@id/reminder_text"/>

</RelativeLayout>